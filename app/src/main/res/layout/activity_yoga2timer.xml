<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".yoga2timer">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageslider"
                    android:layout_width="match_parent"
                    android:layout_height="227dp"
                    app:sliderIndicatorGravity="start"
                    app:sliderIndicatorSelectedColor="@color/colorAccent"
                    app:sliderIndicatorUnselectedColor="@color/colorPrimary">

                </com.smarteist.autoimageslider.SliderView>

        </androidx.cardview.widget.CardView>

        <SeekBar
            android:id="@+id/timer_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/timer_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="5:00"
            android:textSize="60sp">

        </TextView>


        <Button
            android:id="@+id/start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#72CEF8"
            android:onClick="start_timer"
            android:text="START"
            android:textColor="@color/colourBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/option_container">

                <Button
                    android:id="@+id/next_btn"
                    android:layout_width="154dp"
                    android:layout_height="56dp"
                    android:layout_margin="3dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="#72CEF8"
                    android:gravity="center"
                    android:text="Back To Video"
                    android:textColor="@color/colourBlack"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.533"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/info_btn"
                    android:layout_width="154dp"
                    android:layout_height="56dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="#72CEF8"
                    android:gravity="center"
                    android:text="Instruction"
                    android:textColor="@color/colourBlack"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.536"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.121" />

        </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
